<div class="row">
  <div class="col-auto">
    <h1>Your Dashboard</h1>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">content:</label>
        <input class="form-input" type="text" id="blog-content" name="blog-content" />
      </div>
      {{!-- <div class="form-group">
        <label for="blog-desc">Brief description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div> --}}
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h2>Current Blogs:</h2>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
        <p>{{blog.content}}</p>
      </div>
      <div class="col-md-2">
        <a class="btn btn-sm btn-info" href="/edits/{{blog.id}}">UPDATE</a>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blog.js"></script>
